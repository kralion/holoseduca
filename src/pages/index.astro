---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="flex-grow container mx-auto px-4 py-8">
			<div class="hero bg-base-200 rounded-box p-8 mb-8">
				<div class="hero-content text-center">
					<div class="max-w-2xl">
						<h1 class="text-5xl font-bold mb-8">ðŸŽ“ Welcome to HolosEduca</h1>
						<p class="text-xl mb-6">
							Transforming education in Colombia through innovative learning
							solutions and accessible resources.
						</p>
						<a href="/about" class="btn btn-primary">Learn More</a>
					</div>
				</div>
			</div>

			<div class="grid md:grid-cols-2 gap-8">
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h2 class="card-title">Our Mission</h2>
						<p>
							HolosEduca is dedicated to providing quality education resources
							and tools to Colombian students and educators. We believe in the
							power of education to transform lives and communities.
						</p>
					</div>
				</div>

				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h2 class="card-title">Get Started</h2>
						<ul class="list-disc list-inside space-y-2">
							<li>Explore our educational resources</li>
							<li>Join our community of educators</li>
							<li>Contribute to our mission</li>
							<li>
								Stay updated through our <a
									href="/blog"
									class="link link-primary">blog</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="divider my-12">Featured Resources</div>

			<div class="grid md:grid-cols-3 gap-6">
				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h3 class="card-title">Learning Materials</h3>
						<p>Access our curated collection of educational resources.</p>
						<div class="card-actions justify-end">
							<button class="btn btn-primary btn-sm">Browse</button>
						</div>
					</div>
				</div>

				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h3 class="card-title">Teacher Tools</h3>
						<p>Resources and tools designed for educators.</p>
						<div class="card-actions justify-end">
							<button class="btn btn-primary btn-sm">Explore</button>
						</div>
					</div>
				</div>

				<div class="card bg-base-100 shadow-xl">
					<div class="card-body">
						<h3 class="card-title">Community</h3>
						<p>Connect with other educators and students.</p>
						<div class="card-actions justify-end">
							<button class="btn btn-primary btn-sm">Join</button>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
