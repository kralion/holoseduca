---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<div class="navbar bg-base-100 shadow-lg">
	<div class="navbar-start">
		<div class="dropdown lg:hidden">
			<label tabindex="0" class="btn btn-ghost btn-circle">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-5 w-5"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M4 6h16M4 12h16M4 18h7"></path>
				</svg>
			</label>
			<ul
				tabindex="0"
				data-aos="fade-up"
				data-aos-delay="100"
				class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
			>
				<li><a href="/">Inicio</a></li>
				<li><a href="/blog">Blog</a></li>
				<li><a href="/about">Sobre nosotros</a></li>
				<li><a href="/contact">Contacto</a></li>
			</ul>
		</div>
		<a href="/" class="btn btn-ghost normal-case text-xl">{SITE_TITLE}</a>
	</div>
	<div class="navbar-end hidden lg:flex">
		<ul class="menu menu-horizontal px-1 gap-2">
			<li><HeaderLink href="/">Inicio</HeaderLink></li>
			<li><HeaderLink href="/blog">Blog</HeaderLink></li>
			<li><HeaderLink href="/about">Sobre nosotros</HeaderLink></li>
			<li><HeaderLink href="/contact">Contacto</HeaderLink></li>
		</ul>
	</div>
</div>
