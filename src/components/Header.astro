---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
---

<div class="drawer">
	<input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
	<div class="drawer-content flex flex-col">
		<!-- Navbar -->
		<div class="navbar bg-base-100 shadow-lg md:px-8">
			<div class="flex-none lg:hidden">
				<label
					for="my-drawer-3"
					aria-label="open sidebar"
					class="btn btn-square btn-ghost"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-5 w-5"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h7"></path>
					</svg>
				</label>
			</div>

			<a href="/" class="flex navbar-end md:navbar-start items-center gap-2">
				<Image src="/logo.png" alt="HolosEduca" width={100} height={100} />
				<h3 class="hidden lg:block text-3xl font-bold">{SITE_TITLE}</h3>
			</a>

			<div class="navbar-center hidden lg:flex">
				<ul class="menu menu-horizontal px-1 gap-2">
					<li><HeaderLink href="/">Inicio</HeaderLink></li>
					<li><HeaderLink href="/blog">Blog</HeaderLink></li>
					<li><HeaderLink href="/about">Sobre nosotros</HeaderLink></li>
					<li><HeaderLink href="/services">Servicios</HeaderLink></li>
					<li><HeaderLink href="/contact">Contacto</HeaderLink></li>
				</ul>
			</div>

			<div class="navbar-end hidden lg:flex">
				<label class="flex cursor-pointer gap-2">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<circle cx="12" cy="12" r="5"></circle>
						<path
							d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
						></path>
					</svg>
					<input
						type="checkbox"
						value="dracula"
						class="toggle theme-controller"
					/>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
					</svg>
				</label>
			</div>
		</div>
	</div>

	<!-- Drawer side -->
	<div class="drawer-side">
		<label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"
		></label>
		<ul class="menu p-4 w-80 space-y-4 text-xl min-h-full bg-base-200">
			<Image src="/logo.png" alt="HolosEduca" width={150} height={150} />
			<li><a href="/">Inicio</a></li>
			<li><a href="/blog">Blog</a></li>
			<li><a href="/about">Sobre nosotros</a></li>
			<li><a href="/services">Servicios</a></li>
			<li><a href="/contact">Contacto</a></li>
			<li class="mt-4">
				<label class="flex cursor-pointer gap-2">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<circle cx="12" cy="12" r="5"></circle>
						<path
							d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
						></path>
					</svg>
					<input
						type="checkbox"
						value="dracula"
						class="toggle theme-controller"
					/>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
					</svg>
				</label>
			</li>
		</ul>
	</div>
</div>

<script src="../scripts/theme.js"></script>
